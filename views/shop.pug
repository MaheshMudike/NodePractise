extends layouts/main-layout.pug

block styles
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")

block content                 
        main
            if prods.length > 0
               .grid
                   each product in prods
                     article.card.product-item
                        header.card__header
                           h1.product__title #{product.title}
                        div.card__image
                           img(src="https://miro.medium.com/max/10944/1*S81O15rjKfG-BFdnNC6-GQ.jpeg", alt="A book")

                        div.card__content
                            h2.product__price $19.99
                            p.product__description Avery intresting Book  about So many even more Fasicinatuon
                        .card__actions
                            button.btn Add to Cart 
            else 
                 h1 No Products